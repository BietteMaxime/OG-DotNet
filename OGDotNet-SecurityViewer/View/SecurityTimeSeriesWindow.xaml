<Window x:Class="OGDotNet.SecurityViewer.View.SecurityTimeSeriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Charts="clr-namespace:OGDotNet.AnalyticsViewer.View.Charts;assembly=OGDotNet.AnalyticsViewer" 
        Title="SecurityTimeSeriesWindow" Height="500" Width="500" 
        WindowStartupLocation="CenterOwner"
        MinHeight="30"
        MinWidth="200"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False"
        DataContextChanged="Window_DataContextChanged">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>

        <Charts:CurveControl Grid.Row="0" x:Name="curveControl"/>
        <TextBlock Grid.Row="1" Name="detailsBlock" />
    </Grid>
</Window>
