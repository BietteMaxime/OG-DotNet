<Window x:Class="OGDotNet.SecurityViewer.View.SecurityTimeSeriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="SecurityTimeSeriesWindow" Height="500" Width="500" 
        WindowStartupLocation="CenterOwner"
        MinHeight="30"
        MinWidth="200"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False"
        Loaded="Window_Loaded" xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit" xmlns:DataVisualization="clr-namespace:System.Windows.Controls.DataVisualization;assembly=System.Windows.Controls.DataVisualization.Toolkit"
         Cursor="Wait">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <chartingToolkit:Chart Grid.Row="0" Name="chart">
            <chartingToolkit:LineSeries Name="lineSeries"
                IndependentValueBinding="{Binding Path=Item1}" DependentValueBinding="{Binding Path=Item2}"
                >
                <chartingToolkit:LineSeries.DataPointStyle>
                    <Style TargetType="chartingToolkit:DataPoint">
                        <Setter Property="Visibility" Value="Hidden"/>
                    </Style>
                </chartingToolkit:LineSeries.DataPointStyle>
            </chartingToolkit:LineSeries>
                        
            <chartingToolkit:Chart.LegendStyle>
                <Style TargetType="DataVisualization:Legend">
                    <Setter Property="Visibility" Value="Hidden"/>
                    <Setter Property="Width" Value="0"/>
                    <Setter Property="Height" Value="0"/>
                </Style>
            </chartingToolkit:Chart.LegendStyle>
        </chartingToolkit:Chart>
        
        <TextBlock Grid.Row="1" Name="detailsBlock" />
    </Grid>
</Window>
